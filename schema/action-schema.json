{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://github.com/AnotherDaniel/quevee-1/action/v1",
    "description": "Schema for the quevee action file",
    "definitions": {
        "input": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string",
                    "description": "Description of the input"
                },
                "required": {
                    "type": "boolean"
                }
            },
            "required": [
                "description",
                "required"
            ],
            "additionalProperties": false
        }
    },
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 64,
            "minLength": 3,
            "description": "Project name, must be the same as an Eclipse project"
        },
        "description": {
            "type": "string",
            "maxLength": 512,
            "description": "Project description to be shown on badge"
        },
        "branding": {
            "type": "object",
            "properties": {
                "icon": {
                    "type": "string",
                    "enum": [
                        "award"
                    ],
                    "description": "Badge type"
                },
                "color": {
                    "type": "string",
                    "enum": [
                        "red",
                        "yellow",
                        "green"
                    ],
                    "description": "Badge color"
                }
            },
            "additionalProperties": false,
            "description": "Specifies the badge branding properties"
        },
        "inputs": {
            "type": "object",
            "properties": {
                "release_url": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "format": "uri",
                            "description": "URL of the release this manifest refers to"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "artifacts_documentation": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Multi-line list of documentation artifacts, each line must be in the form <url>|<name>|<description>|<tags>"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "artifacts_license": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Multi-line list of licensing artifacts, each line must be in the form <url>|<name>|<description>|<tags>"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "artifacts_readme": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Multi-line list of readme artifacts, each line must be in the form <url>|<name>|<description>|<tags>"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "artifacts_requirements": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Multi-line list of requirements artifacts, each line must be in the form <url>|<name>|<description>|<tags>"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "artifacts_testing": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Multi-line list of testing artifacts, each line must be in the form <url>|<name>|<description>|<tags>"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "purl_type": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "When using the extended output format, this provides the package URL (PURL) type; e.g., 'cargo' for a Rust component"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "extended_output": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Generate more detailed and structured manifest file (json format)"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "output_json": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "File name of json manifest output"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                },
                "output_toml": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "File name of toml manifest output"
                        },
                        "required": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "description",
                        "required"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "release_url"
            ],
            "additionalProperties": false
        },
        "outputs": {
            "type": "object",
            "properties": {
                "manifest_file": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string",
                            "description": "Process artifacts manifest file name"
                        }
                    },
                    "required": [
                        "description"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "manifest_file"
            ],
            "additionalProperties": false
        },
        "runs": {
            "type": "object",
            "properties": {
                "using": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                },
                "image": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "maxLength": 255,
                        "minLength": 1
                    }
                }
            },
            "required": [
                "using",
                "image",
                "args"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "name",
        "description",
        "branding",
        "inputs",
        "outputs",
        "runs"
    ],
    "additionalProperties": false
}